<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/pro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/text_a"
        />

    <ProgressBar
        android:id="@+id/pro_yuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ProgressBar

        android:id="@+id/pro_heng"
        android:layout_width="match_parent"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_pro_a"
        android:background="#e6e6e6"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pro_clip_a"
        />

    <ImageView
        android:id="@+id/iv_pro_b"
        android:background="#6ff666"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pro_clip_b"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/iv_pro_c"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pro_clip_c"
        android:layout_gravity="center_horizontal"
        />



</LinearLayout>
