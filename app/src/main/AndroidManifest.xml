<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wuzhong.codes">
    <!--权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!--权限-->

    <!--Application-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".read.ReadActivity"
            android:windowSoftInputMode="adjustPan|stateHidden"></activity>

        <activity android:name=".read.ReadSetActivity"></activity>
        <activity android:name=".maincraft.MainCraft"></activity>
        <activity android:name=".viewtab.ViewTabActivity"></activity>
        <activity android:name=".viewtab.TabActivity"></activity>
        <activity android:name=".listview.LvAActivity"></activity>
        <activity android:name=".camera.CameraSplashActivity"></activity>

        <activity
            android:name=".camera.CameraMainActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.Design.Light.NoActionBar"></activity>
        <activity android:name=".BaseListActivity" />
        <activity android:name=".dialog.crouton.DialogCroutonActivity"></activity>
        <activity android:name=".dialog.snackbar.DialogSnackbarActivity"></activity>
        <activity android:name=".progressbar.ProDefActivity"></activity>
        <activity android:name=".progressbar.round.ProRActivity"></activity>


    </application>


</manifest>